<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZoDream.Reader.Controls">
    <Style TargetType="local:AddListBoxItem">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AddListBoxItem">
                    <Grid>
                        <Button x:Name="Border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Content="&#xE109;" FontFamily="{StaticResource IconFontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
