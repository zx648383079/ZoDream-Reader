<UserControl x:Class="ZoDream.Reader.Controls.PageCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d2d="clr-namespace:ZoDream.Reader.Drawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             SizeChanged="UserControl_SizeChanged"
             MouseDown="UserControl_MouseDown"
             MouseUp="UserControl_MouseUp"
             KeyUp="UserControl_KeyUp"
             Unloaded="UserControl_Unloaded">
    <Grid>
        <d2d:CanvasControl x:Name="DrawerCanvas" 
                           Draw="DrawerCanvas_Draw"
                           CreateResources="DrawerCanvas_CreateResources"/>
    </Grid>
</UserControl>
