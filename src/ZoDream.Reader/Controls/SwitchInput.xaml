<UserControl x:Class="ZoDream.Reader.Controls.SwitchInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.Reader.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="30" 
             d:DesignWidth="160" 
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="BorderBg" CornerRadius="15" 
                BorderBrush="#5a5a5a" BorderThickness="1" 
                Background="Transparent" 
                Padding="4" Width="58" Height="30">
            <Ellipse x:Name="CircleBtn" 
                     Fill="#5a5a5a" 
                     Width="20" 
                     Height="20" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Margin="10 0" x:Name="LabelTb"
                   Grid.Column="1" 
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
