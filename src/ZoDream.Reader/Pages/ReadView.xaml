<Window x:Class="ZoDream.Reader.Pages.ReadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoDream.Reader.Pages"
        xmlns:control="clr-namespace:ZoDream.Reader.Controls"
        mc:Ignorable="d"
        Title="阅读" Height="450" Width="800" 
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        SizeChanged="Window_SizeChanged"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <control:PageCanvas x:Name="PageRender" OnPrevious="PageRender_OnPrevious" 
                            OnNext="PageRender_OnNext"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="章节名" VerticalAlignment="Center"/>

            <Button Grid.Column="2" Content="&#xE10C;" 
                FontFamily="{DynamicResource IconFontFamily}"
                Background="Transparent" FontSize="30"
                BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
