<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="using:ZoDream.Reader.Controls">

    <Style x:Key="ColorRect" TargetType="Rectangle">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="RadiusX" Value="4" />
        <Setter Property="RadiusY" Value="4" />
    </Style>

    <Style TargetType="ctl:ColorInput">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctl:ColorInput">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock VerticalAlignment="Center" Text="{TemplateBinding Header}" />

                        <SplitButton
                            Grid.Column="1"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch">
                            <Rectangle
                                Width="40"
                                MinHeight="30"
                                VerticalAlignment="Stretch"
                                Fill="{TemplateBinding ColorBrush}" />
                            <SplitButton.Flyout>
                                <Flyout x:Name="PART_Flyout">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <ColorPicker
                                            x:Name="PART_ColorPicker"
                                            Grid.RowSpan="2"
                                            Grid.ColumnSpan="2"
                                            IsColorChannelTextInputVisible="False"
                                            Visibility="Collapsed" />
                                        <GridView
                                            x:Name="PART_MainPanel"
                                            Grid.ColumnSpan="2"
                                            ItemsSource="{TemplateBinding ItemsSource}">
                                            <GridView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <ItemsWrapGrid MaximumRowsOrColumns="6" Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </GridView.ItemsPanel>
                                            <GridView.ItemTemplate>
                                                <DataTemplate>
                                                    <Rectangle Fill="{Binding}" Style="{StaticResource ColorRect}" />
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                        <GridView
                                            x:Name="PART_SecondaryPanel"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2">
                                            <GridView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </GridView.ItemsPanel>
                                            <GridView.ItemTemplate>
                                                <DataTemplate>
                                                    <Rectangle Fill="{Binding}" Style="{StaticResource ColorRect}" />
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                        <HyperlinkButton
                                            x:Name="PART_ToggleBtn"
                                            Grid.Row="2"
                                            Content="自定义颜色" />
                                        <Button
                                            x:Name="PART_ConfirmBtn"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Content="确认" />
                                    </Grid>
                                </Flyout>
                            </SplitButton.Flyout>
                        </SplitButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
