<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="using:ZoDream.Reader.Controls"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml">
    <Style TargetType="ctl:TextEditor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctl:TextEditor">
                    <Border>
                        <Grid>
                            <TextBox
                                x:Name="PART_Canvas"
                                AcceptsReturn="True"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ctl:TextRender">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctl:TextRender">
                    <Border>
                        <Grid>
                            <win2d:CanvasControl x:Name="PART_Canvas" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
