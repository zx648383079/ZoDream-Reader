<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZoDream.Reader.Themes">

    <SolidColorBrush x:Key="WindowHostBrush" Color="#202020" />
    <SolidColorBrush x:Key="WindowCaptionBackground" Color="#202020" />
    <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="#202020" />
    <SolidColorBrush
        x:Key="TranspantBackground"
        Opacity="0.001"
        Color="Black" />
    <AcrylicBrush
        x:Key="AppMaskAcrylicBrush"
        FallbackColor="Black"
        TintColor="#2b2b2b"
        TintOpacity="0.5" />
</ResourceDictionary>
