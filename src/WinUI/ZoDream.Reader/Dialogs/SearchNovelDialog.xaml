<ContentDialog
    x:Class="ZoDream.Reader.Dialogs.SearchNovelDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lbs="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:ZoDream.Reader.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ZoDream.Reader.ViewModels"
    Title="在线搜索"
    PrimaryButtonText="导入"
    SecondaryButtonText="取消"
    mc:Ignorable="d">

    <ContentDialog.DataContext>
        <vm:SearchNovelViewModel />
    </ContentDialog.DataContext>

    <ContentDialog.Resources>
        <ResourceDictionary Source="ms-appx:///Themes/RuleStyle.xaml" />
    </ContentDialog.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ComboBox DisplayMemberPath="Name" ItemsSource="{Binding ChannelItems}" />
        <AutoSuggestBox
            Grid.Column="1"
            PlaceholderText="请输入搜索内容"
            QueryIcon="Find" />

        <ListView
            Grid.Row="1"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding NovelItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Image
                            Grid.RowSpan="5"
                            Margin="0,0,10,0"
                            Source="{Binding Cover}"
                            Stretch="UniformToFill" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding Name}" />
                        <FontIcon
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE77B;" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="{Binding Author}" />

                        <ItemsRepeater
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            ItemsSource="{Binding TagItems}">
                            <ItemsRepeater.Layout>
                                <lbs:WrapLayout HorizontalSpacing="10" VerticalSpacing="10" />
                            </ItemsRepeater.Layout>
                        </ItemsRepeater>


                        <FontIcon
                            Grid.Row="3"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE81C;" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="{Binding LatestChapterTitle}" />
                        <FontIcon
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="16"
                            Glyph="&#xE74C;" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Text="{Binding Description}"
                            TextWrapping="Wrap" />

                        <InfoBadge
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Value="{Binding SourceCount}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
