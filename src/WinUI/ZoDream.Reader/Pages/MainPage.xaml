<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ZoDream.Reader.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:Name="MenuBar" ItemInvoked="NavigationView_ItemInvoked"
                    IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Bookmarks" Content="我的书架" Tag="home" />
            <NavigationViewItem Icon="Globe" Content="探索发现" Tag="explore" />
            <NavigationViewItem Icon="World" Content="书源管理" Tag="rule/source" />
        </NavigationView.MenuItems>
        <NavigationView.FooterMenuItems>
            <NavigationViewItem Icon="Help"  Content="帮助支持" Tag="help"/>
        </NavigationView.FooterMenuItems>
        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Page>
