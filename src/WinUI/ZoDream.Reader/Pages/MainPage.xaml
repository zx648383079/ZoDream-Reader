<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ZoDream.Reader.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView ItemInvoked="NavigationView_ItemInvoked" IsBackButtonVisible="Collapsed">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Bookmarks" Content="我的书架" Tag="home" />
            <NavigationViewItem Icon="Globe" Content="探索发现" Tag="SamplePage2" />
            <NavigationViewItem Icon="World" Content="书源管理" Tag="SamplePage3" />
        </NavigationView.MenuItems>
        <NavigationView.PaneFooter>
            <NavigationViewItem Icon="Help"  Content="帮助支持" Tag="help" />
        </NavigationView.PaneFooter>
        <Frame x:Name="ContentFrame" Padding="{StaticResource DefaultPagePadding}" />
    </NavigationView>
</Page>
