<Page
    x:Class="ZoDream.Reader.Pages.Settings.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lbs="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:ZoDream.Reader.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="{StaticResource PageHeaderPadding}">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="ZoDream Reader" />
            <TextBlock Text="这是一个开源软件" />
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            Padding="{StaticResource ContainerPadding}"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="{StaticResource ContainerBodyPadding}" Spacing="4">
                <lbs:SettingsCard Description="" Header="开发人员" />
                <lbs:SettingsCard Description="版本" Header="更新日志" />
                <lbs:SettingsCard Header="检查更新" />
                <TextBlock Style="{StaticResource GroupHeaderStyle}" Text="联系我们" />
                <lbs:SettingsCard Header="Github" />
                <lbs:SettingsCard Header="软件主页" />
                <TextBlock Style="{StaticResource GroupHeaderStyle}" Text="其他" />
                <lbs:SettingsCard Header="崩溃日志" />
                <lbs:SettingsCard Header="用户隐私与协议" />
                <lbs:SettingsCard Header="开源许可" />
                <lbs:SettingsCard Header="免责声明" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
