<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ZoDream.Reader.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="using:ZoDream.Reader.Controls"
    xmlns:cvt="using:ZoDream.Reader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZoDream.Reader.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ZoDream.Reader.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ShelfViewModel />
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <Style x:Key="IconStyle" TargetType="FontIcon">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style x:Key="MetaStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="12" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ItemsView ItemsSource="{Binding NovelItems}" SelectionMode="None">
            <ItemsView.Layout>
                <UniformGridLayout
                    ItemsStretch="Fill"
                    MaximumRowsOrColumns="2"
                    MinColumnSpacing="8"
                    MinItemHeight="120"
                    MinItemWidth="360"
                    MinRowSpacing="8" />
            </ItemsView.Layout>

            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="vm:NovelItemViewModel">
                    <ItemContainer AutomationProperties.Name="{x:Bind Name}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.RowSpan="4"
                                Margin="0,0,10,0"
                                Source="{x:Bind cvt:ConverterHelper.ToImg(Cover)}"
                                Stretch="UniformToFill" />
                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="{x:Bind Name}" />
                                <Border
                                    Grid.Column="1"
                                    Padding="5,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="LightGray"
                                    CornerRadius="5">
                                    <TextBlock Text="{x:Bind Remaining}" />
                                </Border>
                                <FontIcon
                                    Grid.Row="1"
                                    Glyph="&#xE77B;"
                                    Style="{StaticResource IconStyle}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource MetaStyle}"
                                    Text="{x:Bind Author}" />
                                <FontIcon
                                    Grid.Row="2"
                                    Glyph="&#xE81C;"
                                    Style="{StaticResource IconStyle}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource MetaStyle}"
                                    Text="{x:Bind CurrentChapterTitle}" />
                                <FontIcon
                                    Grid.Row="3"
                                    Glyph="&#xE74C;"
                                    Style="{StaticResource IconStyle}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Style="{StaticResource MetaStyle}"
                                    Text="{x:Bind LatestChapterTitle}" />
                            </Grid>
                        </Grid>

                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>
        <CommandBar Grid.Row="1">
            <AppBarButton Icon="List" Label="切换选择" />
            <AppBarButton Icon="Edit" Label="编辑" />
            <AppBarButton Icon="Delete" Label="删除" />
            <AppBarButton
                Command="{Binding AddCommand}"
                Icon="Add"
                Label="添加" />
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Library" Label="分组" />
                <AppBarButton Icon="Sync" Label="同步" />
                <AppBarButton
                    Command="{Binding CreateCommand}"
                    Icon="NewFolder"
                    Label="创建" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>
